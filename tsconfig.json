{
    "compilerOptions": {
        "target": "ES2020",
        "module": "node20",
        "moduleResolution": "node16",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,

        "resolveJsonModule": true,
        "sourceMap": true,

        "jsx": "react",
        
    },
    "include": ["src", "src/config"],
    "exclude": ["src/node_modules", "dist"]
}