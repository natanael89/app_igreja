{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "es2017",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,

        "resolveJsonModule": true,
        "sourceMap": true,

        "jsx": "react",
        
    },
    "include": ["src", "src/config", "dist"],
    "exclude": ["node_modules", "node_modules/@adminjs/**"]
}